{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src-ts",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "build/",
    "__test__/",
    "index.js",
    "packager.js",
    "generate-config-type.js"
  ]
}
